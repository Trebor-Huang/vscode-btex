{
    "name": "vscode-btex",
    "displayName": "vscode-btex",
    "description": "btex plugin for VSCode",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.68.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onLanguage:btex"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "vscode-btex.compile",
                "title": "Compile bTeX to HTML"
            }
        ],
        "languages": [
            {
                "id": "btex",
                "extensions": [
                    ".btx"
                ],
                "aliases": [
                    "bTeX",
                    "btex"
                ],
                "configuration": "./src/language/language-configuration.json"
            }
        ],
        "configuration": {
            "title": "Btex",
            "properties": {
                "btex.command": {
                    "type": "string",
                    "default": "yarn start",
                    "description": "Command to start up bTeX rendering server. Leave empty to manually start up the server."
                },
                "btex.directory": {
                    "type": "string",
                    "default": "",
                    "description": "Directory of bTeX rendering server."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "yarn run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "yarn run compile && yarn run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.68.0",
        "@types/glob": "^7.2.0",
        "@types/mocha": "^9.1.1",
        "@types/node": "16.x",
        "@typescript-eslint/eslint-plugin": "^5.27.0",
        "@typescript-eslint/parser": "^5.27.0",
        "eslint": "^8.16.0",
        "glob": "^8.0.3",
        "mocha": "^10.0.0",
        "typescript": "^4.7.2",
        "@vscode/test-electron": "^2.1.3"
    }
}