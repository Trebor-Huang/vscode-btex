{
    "name": "vscode-btex",
    "displayName": "vscode-btex",
    "description": "btex plugin for VSCode",
    "repository": "github:Trebor-Huang/vscode-btex",
    "publisher": "TreborHuang",
    "version": "0.0.10",
    "license": "MIT",
    "engines": {
        "vscode": "^1.68.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onLanguage:btex"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "vscode-btex.compile",
                "title": "Compile bTeX to HTML"
            },
            {
                "command": "vscode-btex.restart",
                "title": "Restart tikz2svg server"
            }
        ],
        "languages": [
            {
                "id": "btex",
                "extensions": [
                    ".btx"
                ],
                "aliases": [
                    "bTeX",
                    "btex"
                ],
                "configuration": "./resources/language/language-configuration.json"
            }
        ],
        "grammars": [],
        "configuration": {
            "title": "Btex",
            "properties": {
                "btex.command": {
                    "type": "string",
                    "default": "",
                    "description": "Command to start up tikz2svg server.\nIt usually should be `yarn start` or `yarn.cmd start` (on Windows).\nLeave empty to skip automatically starting up the server, you can still start the server manually."
                },
                "btex.directory": {
                    "type": "string",
                    "default": "",
                    "description": "Directory of tikz2svg server.\nThis is working directory where the command to start up the server will be run."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "yarn compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "yarn run compile && yarn run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js",
        "esbuild-base": "esbuild ./src/extension.ts node_modules/jsdom/lib/jsdom/living/xhr/xhr-sync-worker.js \"--external:./xhr-sync-worker.js\" --bundle --outdir=out/ --external:vscode --external:canvas --format=cjs --platform=node",
        "esbuild": "yarn run esbuild-base --sourcemap",
        "esbuild-watch": "yarn run esbuild-base --sourcemap --watch",
        "test-compile": "tsc -p ./"
    },
    "devDependencies": {
        "@types/glob": "^7.2.0",
        "@types/katex": "^0.14.0",
        "@types/mocha": "^9.1.1",
        "@types/node": "16.x",
        "@types/vscode": "^1.68.0",
        "@typescript-eslint/eslint-plugin": "^5.27.0",
        "@typescript-eslint/parser": "^5.27.0",
        "@vscode/test-electron": "^2.1.3",
        "eslint": "^8.16.0",
        "glob": "^8.0.3",
        "mocha": "^10.0.0",
        "typescript": "^4.7.2"
    },
    "dependencies": {
        "btex": "banana-space/btex#dist",
        "esbuild": "^0.14.53"
    }
}
